@model Shared.BTO.ScheduleBTO

@{
    ViewData["Title"] = "CreateSchedule";
}

<h1>Create a new schedule service</h1>

<hr />

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" value="0" hidden="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Resto.Id" class="form-control" hidden="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="WeekDay" class="control-label"></label>
                <select asp-for="WeekDay" asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
                <span asp-validation-for="WeekDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOpen" class="control-label"></label>
                <input asp-for="TimeOpen" class="form-control" />
                <span asp-validation-for="TimeOpen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeClosed" class="control-label"></label>
                <input asp-for="TimeClosed" class="form-control" />
                <span asp-validation-for="TimeClosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-secondary" asp-action="GetAllSchedulesByRestoId" asp-route-id="@Model.Resto.Id">Back to List</a>
</div>

