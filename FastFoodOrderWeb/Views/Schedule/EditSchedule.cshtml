@model Shared.BTO.ScheduleBTO

@{
    ViewData["Title"] = "EditSchedule";
}

<h1>Edit this schedule : </h1>


@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <input asp-for="RestoId" class="form-control" hidden="hidden"/>
                </div>
            <div class="form-group">
                <label asp-for="WeekDay" class="control-label"></label>
                <select asp-for="WeekDay" asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
                <span asp-validation-for="WeekDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOpen" class="control-label"></label>
                <input asp-for="TimeOpen" class="form-control" />
                <span asp-validation-for="TimeOpen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeClosed" class="control-label"></label>
                <input asp-for="TimeClosed" class="form-control" />
                <span asp-validation-for="TimeClosed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-secondary" asp-action="GetAllSchedulesByRestoId" asp-route-id="@Model.RestoId">Back to List</a>
</div>

