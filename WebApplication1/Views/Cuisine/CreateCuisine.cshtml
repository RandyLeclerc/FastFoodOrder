@model Shared.BTO.CuisineBTO

@{
    ViewData["Title"] = "CreateCuisine";
}

<h1>Create a new Cuisine</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCuisine">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create this cuisine" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-secondary" asp-action="GetAllCuisines">Back to List</a>
</div>