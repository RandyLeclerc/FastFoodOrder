@model IEnumerable<Shared.BTO.MealTypeBTO>

@{
    ViewData["Title"] = "GetAllMealTypesByRestoId";
}

<h1>GetAllMealTypesByRestoId</h1>

<p>
    <a class="btn btn-sm btn-primary" asp-action="CreateMealType" asp-route-id="@ViewData["RestoId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RestaurantId)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantId)
            </td>
            <td>
                <form asp-action="DeleteMealType" asp-route-id="@item.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="EditMealType" asp-route-id="@item.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Do you really want to delete this meal type?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
</table>
